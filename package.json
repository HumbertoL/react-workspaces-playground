{
  "name": "root",
  "private": true,
  "scripts": {
    "build:client": "npx lerna run build --scope '{free-trial,opt-out,sign-up}'",
    "deploy": "FORCE_COLOR=true lerna run deploy",
    "heroku-postbuild": "yarn run build:client",
    "install:client": "yarn run install:optout && yarn run install:freetrial && yarn run install:signup",
    "install:common": "cd packages/components && yarn",
    "install:freetrial": "cd packages/apps/free-trial && yarn build",
    "install:optout": "cd packages/apps/opt-out && yarn build",
    "install:server": "cd server && yarn",
    "install:signup": "cd packages/apps/sign-up && yarn build",
    "install": "yarn run install:client && yarn run install:server",
    "nf-build:client": "nf run yarn run build:client",
    "start:prod": "nf start -p 3000",
    "start": "nf start -p 3000 -j Procfile.dev",
    "test:server": "npm run nf-build:client && npm run start:prod",
    "test": "FORCE_COLOR=true lerna run lint && CI=true FORCE_COLOR=true lerna run test -- --coverage"
  },
  "workspaces": {
    "packages": [
      "packages/apps/*",
      "packages/components",
      "packages/storybook"
    ],
    "nohoist": [
      "**/webpack-dev-server",
      "**/babel-loader",
      "**/babel-jest"
    ]
  },
  "devDependencies": {
    "@babel/preset-react": "^7.6.3",
    "foreman": "3.0.1",
    "jest-prop-type-error": "^1.1.0",
    "lerna": "^3.10.7",
    "prettier": "^1.16.1"
  },
  "dependencies": {
    "babel-eslint": "10.0.1",
    "eslint": "5.16.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-config-react-app": "^4.0.0",
    "eslint-config-xo": "^0.26.0",
    "eslint-config-xo-react": "^0.19.0",
    "eslint-plugin-flowtype": "^3.6.1",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.6.0"
  },
  "engines": {
    "node": "^8.16.0",
    "npm": "^6.4.1"
  },
  "engineStrict": true,
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/setupTests.{js,jsx}",
      "!src/index.{js,jsx}",
      "!src/serviceWorker.{js,jsx}",
      "!src/**/*.(spec|test|stories).{js,jsx}"
    ]
  }
}
